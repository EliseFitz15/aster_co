.events-image
  = image_tag('product/wicks.jpg')

.story-box
  .events-list
    %ul
      - @events.each do |event|
        %li
          %h1.event-title
            = link_to event.title, event.event_link
          %hr
          %p.date
            = "#{event.start_date.strftime("%B %-d, %Y")} / #{event.event_times}"
          %p.details
            = event.details
          %p.location-name
            = event.location_name
          %p.address
            = "#{event.address}"

.events-image
  = image_tag('product/candle-rows.jpg')
